{
    "title": "Chinook",
    "desc": "Chinook sample database",
    "menu_orientation": "vertical",
    "icon_name": "folder-music",
    "basename": "./data/chinook.sqlite",
    "tables": {
        "artists": {
            "key": "ArtistId",
            "key_display": "Name",
            "elements": {
                "ArtistId": {
                    "label_long": "ID",
                    "label_short": "ID",
                    "type": "counter"
                },
                "Name": {
                    "label_long": "Name",
                    "label_short": "Name",
                    "type": "text",
                    "searchable": true,
                    "sortable": true,
                    "col_width": 250,
                    "required": true
                },
                "_valbums": {
                    "label_long": "Albums",
                    "label_short": "Albums",
                    "type": "view",
                    "height": 300,
                    "params": {
                        "table": "albums",
                        "view": "valbums"
                    },
                    "args": {
                        "ArtistId": "{ArtistId}"
                    }
                }
            },
            "views": {
                "vall": {
                    "title": "Artists",
                    "form_add": "fadd",
                    "form_edit": "fedit",
                    "icon_name": "folder-publicshare",
                    "deletable": true,
                    "elements": {
                        "ArtistId": {},
                        "Name": {}
                    },
                    "order_by": "Name"
                }
            },
            "forms": {
                "fadd": {
                    "title": "Add an artist",
                    "elements": {
                        "ArtistId": {},
                        "Name": {}
                    }
                },
                "fedit": {
                    "title": "Artist",
                    "elements": {
                        "ArtistId": {},
                        "Name": {},
                        "_valbums": {}
                    }
                }
            }
        },
        "albums": {
            "key": "AlbumId",
            "key_display": "Title",
            "elements": {
                "AlbumId": {
                    "label_long": "ID",
                    "label_short": "ID",
                    "type": "counter",
                    "hide": true
                },
                "Title": {
                    "label_long": "Album",
                    "label_short": "Album",
                    "type": "text",
                    "searchable": true,
                    "sortable": true,
                    "col_width": 250,
                    "required": true
                },
                "ArtistId": {
                    "label_long": "Artist",
                    "label_short": "Artist",
                    "type": "combo",
                    "sql_items": "SELECT artists.ArtistId, artists.Name From artists",
                    "jointure": {
                        "join": "LEFT OUTER JOIN artists on artists.ArtistId = albums.ArtistId",
                        "display": "artists.Name"
                    },
                    "searchable": true,
                    "sortable": true,
                    "col_width": 250
                },
                "_ArtistName": {
                    "label_long": "Artist",
                    "label_short": "Artist",
                    "type": "text",
                    "sql_text": "SELECT artists.Name From artists where artists.ArtistId = '{ArtistId}'",
                    "jointure": {
                        "join": "LEFT OUTER JOIN artists on artists.ArtistId = albums.ArtistId",
                        "display": "artists.Name"
                    },
                    "searchable": true,
                    "sortable": true,
                    "col_width": 250
                },
                "_vtracks": {
                    "label_long": "Tracks",
                    "label_short": "Tracks",
                    "type": "view",
                    "height": 300,
                    "params": {
                        "table": "tracks",
                        "view": "vtracks"
                    },
                    "args": {
                        "AlbumId": "{AlbumId}"
                    }
                }
            },
            "views": {
                "vall": {
                    "title": "Albums",
                    "form_edit": "fedit",
                    "icon_name": "folder-music",
                    "deletable": true,
                    "elements": {
                        "ArtistId": {},
                        "AlbumId": {},
                        "Title": {}
                    },
                    "limit": 1000,
                    "order_by": "Artists.Name, Albums.Title"
                },
                "valbums": {
                    "title": "Albums",
                    "hide": true,
                    "form_add": "fadd",
                    "form_edit": "fedit",
                    "searchable": false,
                    "deletable": true,
                    "elements": {
                        "ArtistId": {
                            "hide": true
                        },
                        "AlbumId": {
                            "hide": true
                        },
                        "Title": {}
                    }
                }
            },
            "forms": {
                "fadd": {
                    "title": "Add an album",
                    "elements": {
                        "ArtistId": {"read_only": true},
                        "_ArtistName": {"read_only": true},
                        "AlbumId": {},
                        "Title": {}
                    }
                },
                "fedit": {
                    "title": "Album",
                    "elements": {
                        "ArtistId": {"read_only": true},
                        "AlbumId": {"read_only": true},
                        "Title": {},
                        "_vtracks": {}
                    }
                }
            }
        },
        "media_types": {
            "key": "MediaTypeId",
            "key_display": "Name",
            "elements": {
                "MediaTypeId": {
                    "label_long": "ID",
                    "label_short": "ID",
                    "type": "counter",
                    "hide": true
                },
                "Name": {
                    "label_long": "Name",
                    "label_short": "Name",
                    "type": "text",
                    "required": true,
                    "searchable": true,
                    "sortable": true,
                    "col_width": 250
                }
            },
            "views": {
                "vall": {
                    "title": "Media Types",
                    "form_add": "fadd",
                    "form_edit": "fedit",
                    "icon_name": "applications-multimedia",
                    "deletable": true,
                    "elements": {
                        "MediaTypeId": {},
                        "Name": {"col_editable": true}
                    }
                }
            },
            "forms": {
                "fadd": {
                    "title": "Add a media type",
                    "elements": {
                        "MediaTypeId": {},
                        "Name": {}
                    }
                },
                "fedit": {
                    "title": "Media Type",
                    "elements": {
                        "MediaTypeId": {},
                        "Name": {}
                    }
                }
            }
        },
        "genres": {
            "key": "GenreId",
            "key_display": "Name",
            "elements": {
                "GenreId": {
                    "label_long": "ID",
                    "label_short": "ID",
                    "type": "counter",
                    "hide": true
                },
                "Name": {
                    "label_long": "Name",
                    "label_short": "Name",
                    "type": "text",
                    "required": true
                }
            },
            "views": {
                "vall": {
                    "title": "Genre",
                    "form_add": "fadd",
                    "form_edit": "fedit",
                    "icon_name": "audio-x-generic",
                    "deletable": true,
                    "elements": {
                        "GenreId": {},
                        "Name": {}
                    }
                }
            },
            "forms": {
                "fadd": {
                    "title": "Add a genre",
                    "elements": {
                        "GenreId": {},
                        "Name": {}
                    }
                },
                "fedit": {
                    "title": "Genre",
                    "elements": {
                        "GenreId": {},
                        "Name": {}
                    }
                }
            }
        },
        "tracks": {
            "key": "TrackId",
            "key_display": "Name",
            "elements": {
                "TrackId": {
                    "label_long": "ID",
                    "label_short": "ID",
                    "type": "counter",
                    "hide": true
                },
                "Name": {
                    "label_long": "Name",
                    "label_short": "Name",
                    "type": "text",
                    "required": true
                },
                "AlbumId": {
                    "label_long": "Album",
                    "label_short": "Album",
                    "type": "combo",
                    "sql_items": "SELECT albums.AlbumId, albums.Title From albums",
                    "jointure": {
                        "join": "LEFT OUTER JOIN albums on albums.AlbumId = tracks.AlbumId",
                        "display": "albums.Title"
                    },
                    "required": true
                },
                "_AlbumID": {
                    "label_long": "Album",
                    "label_short": "Album",
                    "type": "text",
                    "sql_text": "SELECT albums.Title From albums WHERE albums.AlbumId = '{AlbumId}'",
                    "jointure": {
                        "join": "LEFT OUTER JOIN albums on albums.AlbumId = tracks.AlbumId",
                        "display": "albums.Title"
                    },
                    "required": true
                },
                "MediaTypeId": {
                    "label_long": "Type media",
                    "label_short": "Type media",
                    "type": "combo",
                    "sql_items": "SELECT MediaTypeId, Name From media_types",
                    "jointure": {
                        "join": "LEFT OUTER JOIN media_types on media_types.MediaTypeId = tracks.MediaTypeId",
                        "display": "media_types.Name"
                    }
                },
                "GenreId": {
                    "label_long": "Genre",
                    "label_short": "Genre",
                    "type": "combo",
                    "sql_items": "SELECT GenreId, Name From genres",
                    "jointure": {
                        "join": "LEFT OUTER JOIN genres on genres.GenreId = tracks.GenreId",
                        "display": "genres.Name"
                    }
                },
                "Composer": {
                    "label_long": "Composer",
                    "label_short": "Composer",
                    "type": "text"
                },
                "Milliseconds": {
                    "label_long": "Duration",
                    "label_short": "Duration",
                    "type": "int"
                },
                "milliseconds_": {
                    "label_long": "Duration",
                    "label_short": "Duration",
                    "type": "text",
                    "sql_get": "printf('%s mn %s s', tracks.Milliseconds/1000/60, tracks.Milliseconds/1000%60)",
                    "col_align": "right"
                },
                "Bytes": {
                    "label_long": "Size",
                    "label_short": "Size",
                    "type": "int"
                },
                "bytes_": {
                    "label_long": "Size",
                    "label_short": "Size",
                    "type": "text",
                    "sql_get": "printf('%.2f M', tracks.Bytes*1.0/1000/1000)",
                    "col_align": "right"
                },
                "UnitPrice": {
                    "label_long": "Price",
                    "label_short": "Price",
                    "type": "float",
                    "display": "%3.2f €"
                },
                "_ArtistName": {
                    "label_long": "Artist",
                    "label_short": "Artist",
                    "type": "text",
                    "sql_text": "SELECT artists.Name from artists LEFT OUTER JOIN albums ON albums.ArtistId = artists.ArtistId WHERE albums.AlbumId = '{AlbumId}'",
                    "jointure": {
                        "join": "LEFT OUTER JOIN albums as alb ON alb.AlbumId = tracks.AlbumId LEFT OUTER JOIN artists on artists.ArtistId = alb.ArtistId",
                        "display": "artists.Name"
                    }
                }
            },
            "views": {
                "vall": {
                    "title": "Tracks",
                    "form_edit": "fedit",
                    "searchable_sql": true,
                    "icon_name": "media-optical",
                    "elements": {
                        "TrackId": {},
                        "_ArtistName": {"searchable": true},
                        "AlbumId": {"searchable": true},
                        "Name": {"searchable": true},
                        "Composer": {"searchable": true}
                    },
                    "order_by": "artists.Name, albums.Title",
                    "limit": 200
                },
                "vtracks": {
                    "title": "Tracks",
                    "form_add": "fadd",
                    "form_edit": "fedit",
                    "deletable": true,
                    "hide": "true",
                    "elements": {
                        "TrackId": {},
                        "Name": {},
                        "GenreId": {},
                        "milliseconds_": {},
                        "bytes_": {}
                    }
                }
            },
            "forms": {
                "fadd": {
                    "title": "Add a track",
                    "elements": {
                        "_ArtistName": {"read_only": true},
                        "AlbumId": {"hide": true},
                        "_AlbumID": {"read_only": true},
                        "TrackId": {},
                        "Name": {},
                        "MediaTypeId": {},
                        "GenreId": {},
                        "Composer": {},
                        "Milliseconds": {},
                        "Bytes": {},
                        "UnitPrice": {}
                    }
                },
                "fedit": {
                    "title": "Track",
                    "elements": {
                        "_ArtistName": {"read_only": true},
                        "AlbumId": {"hide": true},
                        "_AlbumID": {"read_only": true},
                        "TrackId": {},
                        "Name": {},
                        "MediaTypeId": {},
                        "GenreId": {},
                        "Composer": {},
                        "Milliseconds": {},
                        "Bytes": {},
                        "UnitPrice": {"read_only": true}
                    }
                }
            }
        }
    }
}