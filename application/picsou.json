{
    "title": "PICSOU en action",
    "desc": "Analyse les cours de la bourse et propose des ordres d'achat et de vente de valeurs",
    "tables": {
        "cours": {
            "basename": "/mnt/sandisk/data/picsou.sqlite",
            "key": "cours_id",
            "elements": {
                "cours_id": {
                    "label_long": "id",
                    "label_short": "id",
                    "type": "int"
                },
                "cours_ptf_id": {
                    "label_long": "Valeur",
                    "label_short": "Valeur",
                    "type": "text"
                },
                "cours_date": {
                    "label_long": "Date",
                    "label_short": "Date",
                    "type": "date"
                },
                "cours_close": {
                    "label_long": "Cours",
                    "label_short": "Cours",
                    "type": "text",
                    "format": "{:.2f}"
                }
            },
            "views": {
                "vall": {
                    "title": "Tous les cours",
                    "elements": {
                        "cours_id": {},
                        "cours_ptf_id": {},
