{
    "title": "PICSOU en action",
    "desc": "Analyse les cours de la bourse et propose des ordres d'achat et de vente de valeurs",
    "tables": {
        "cours": {
            "basename": "/mnt/sandisk/data/picsou.sqlite",
            "key": "cours_id",
            "elements": {
                "cours_id": {
                    "label_long": "id",
                    "label_short": "id",
                    "type": "int"
                },
                "cours_ptf_id": {
                    "label_long": "Valeur",
                    "label_short": "Valeur",
                    "type": "text"
                },
                "cours_name": {
                    "label_long": "Nom",
                    "label_short": "Nom",
                    "type": "text",
                    "searchable": true,
                    "expandable": false,
                    "col_width": 150
                },
                "cours_date": {
                    "label_long": "Date",
                    "label_short": "Date",
                    "type": "date",
                    "sortable": true
                },
                "cours_close": {
                    "label_long": "Cours",
                    "label_short": "Cours",
                    "type": "text",
                    "format": "{:.2f}"
                }
            },
            "views": {
                "vall": {
                    "title": "Tous les cours",
                    "form_add": "fadd",
                    "form_edit": "fedit",
                    "deletable": true,
                    "elements": {
                        "cours_id": {},
                        "cours_ptf_id": {},
                        "cours_name": {},
                        "cours_close": {
                            "sortable": true
                        },
                        "cours_date": {}
                    }
                },
                "vopen": {
                    "title": "Les cours ouverts",
                    "elements": {
                        "cours_id": {},
                        "cours_ptf_id": {}
                    }
                }
            },
            "forms": {
                "fadd": {
                    "title": "Ajout d'un élément",
                    "elements": {
                        "cours_id": {},
                        "cours_ptf_id": {}
                    }
                },
                "fedit": {
                    "title": "Edition d'un élément",
                    "elements": {
                        "cours_id": {},
                        "cours_ptf_id": {"read_only": true},
                        "cours_name": {}
                    }
                }
            }
        }
    }
}